{
  "version": 2,
  "builds": [
    {
      "src": "oikonomos-dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "oikonomos-dashboard/dist"
      }
    },
    {
      "src": "backend/bot.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/bot.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/monthly-closing",
      "schedule": "1 0 1 * *"
    }
  ]
}