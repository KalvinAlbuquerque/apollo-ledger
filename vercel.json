{
  "version": 2,
  "builds": [
    {
      "src": "backend/bot.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/bot",
      "dest": "backend/bot.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/bot.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/monthly-closing",
      "schedule": "1 0 1 * *"
    }
  ]
}