{
  "version": 2,
  "builds": [
    {
      "src": "backend/bot.py",
      "use": "@vercel/python"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, X-API-Key"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/bot",
      "dest": "backend/bot.py"
    },
    {
      "src": "/api/generate-api-key",
      "dest": "backend/bot.py"
    },
    {
      "src": "/api/categories",
      "dest": "backend/bot.py"
    },
    {
      "src": "/api/transaction",
      "dest": "backend/bot.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/monthly-closing",
      "schedule": "1 0 1 * *"
    }
  ]
}